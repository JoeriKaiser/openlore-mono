# =============================================================================
# OPENLORE MONOREPO ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure for your deployment

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================
# Port to expose the application on
PROXY_PORT=80

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================
POSTGRES_USER=openlore
POSTGRES_PASSWORD=CHANGE_ME_openlore_secret_password
POSTGRES_DB=openlore

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# Runtime environment (development, production)
NODE_ENV=production

# Database URL (uses Docker service name 'postgres')
DATABASE_URL=postgresql://openlore:CHANGE_ME_openlore_secret_password@postgres:5432/openlore

# URLs - Update these for your deployment
BETTER_AUTH_URL=http://localhost/api
CLIENT_URL=http://localhost
CORS_ORIGINS=http://localhost

# Secrets - MUST be changed to strong random values (min 32 characters each)
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=CHANGE_ME_generate_a_secure_32_char_secret_here
AUTH_SECRET=CHANGE_ME_generate_a_secure_32_char_secret_here
ENCRYPTION_SECRET=CHANGE_ME_generate_a_secure_32_char_secret_here

# OpenRouter Configuration
OPENROUTER_REFERER=http://localhost

# =============================================================================
# EMBEDDINGS & RAG CONFIGURATION
# =============================================================================
# Embeddings model for RAG (HuggingFace model ID)
EMBEDDINGS_MODEL_ID=Xenova/bge-small-en-v1.5
EMBEDDINGS_LOCAL_PATH=/app/models

# RAG tuning parameters
RAG_TOP_K=6
RAG_CHUNK_TOKENS=240
RAG_CHUNK_OVERLAP_TOKENS=40

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Enable/disable user registration
VITE_REGISTRATION_ENABLED=false
